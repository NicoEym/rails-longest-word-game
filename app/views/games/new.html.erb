<div class="container">
  <h1>New game</h1>

  <div class="letters">
    <ul>
      <% @letters.each do |letter| %>
        <li class="letter"><%= letter %> </li>
      <% end %>
    </ul>
  </div>

  <div>
    <form  action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <div>
        <label>What is the longest word you can find?</label>
        </div>
        <div class="input">
        <input type="word" name="word" id="word" placeholder="Type your word">
        <button type="submit" class="btn">Play!</button>
      </div>

    </form>
  </div>
</div>
